# !/usr/bin/env bash
# Configure a new Nginx server 
# so that /redirect_me is redirecting to another page

# install nginx if not already installed
sudo apt-get -y update
sudo apt-get -y install nginx

# Allow HTTP traffic through the system's firewall for Nginx.
sudo ufw allow 'Nginx HTTP'

# creates an HTML file with the content "Hello World" 
# in the default Nginx document root directory.
echo "Hello World" | sudo tee /var/www/html/index
sudo sed -i '/listen 80 default_server/a rewrite ^/redirect_me https://www.youtube.com/ permanent;' /etc/nginx/sites-available/default

# Restart machine
sudo service nginx restart
